<!DOCTYPE html>
<html>
<head>
    <title>Cifrado César</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        #container {
            max-width: 400px;
            margin: 0 auto;
            text-align: center;
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
        }

        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        #resultado {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div id="container">
        <h1>Cifrado César</h1>
        <label for="texto">Texto:</label>
        <input type="text" id="texto" placeholder="Ingrese una palabra">
        <label for="desplazamiento">Desplazamiento:</label>
        <input type="number" id="desplazamiento" placeholder="Ingrese el desplazamiento">
        <button onclick="cifrar()">Cifrar</button>
        <button onclick="descifrar()">Descifrar</button>
        <div id="resultado"></div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.3.0/crypto-js.js"></script>
    <script>
        function cifrar() {
            const textoOriginal = document.getElementById("texto").value;
            const desplazamiento = parseInt(document.getElementById("desplazamiento").value);

            if (isNaN(desplazamiento)) {
                alert("Por favor, ingrese un valor válido para el desplazamiento.");
                return;
            }

            const resultado = cifrarCesar(textoOriginal, desplazamiento);
            document.getElementById("resultado").textContent = "Resultado cifrado: " + resultado;
        }

        function descifrar() {
            const textoCifrado = document.getElementById("texto").value;
            const desplazamiento = parseInt(document.getElementById("desplazamiento").value);

            if (isNaN(desplazamiento)) {
                alert("Por favor, ingrese un valor válido para el desplazamiento.");
                return;
            }

            const resultado = descifrarCesar(textoCifrado, desplazamiento);
            document.getElementById("resultado").textContent = "Resultado descifrado: " + resultado;
        }

        function cifrarCesar(texto, desplazamiento) {
            return CryptoJS.AES.encrypt(texto, desplazamiento.toString()).toString();
        }

        function descifrarCesar(textoCifrado, desplazamiento) {
            const bytes = CryptoJS.AES.decrypt(textoCifrado, desplazamiento.toString());
            return bytes.toString(CryptoJS.enc.Utf8);
        }
    </script>
</body>
</html>
